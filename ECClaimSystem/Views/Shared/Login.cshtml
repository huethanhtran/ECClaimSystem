
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/Admin/css")
</head>

<body class="login">
    <form method="post" action="@Url.Action("LoginAccount","User")">
        <div>
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>
            <div class="login_wrapper">
                <div class="animate form login_form">
                    <section class="login_content">
                        <form>
                            <h1>Login Form</h1>
                            <div class="alert-error">
                                @ViewBag.Error
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Username" name="username" id="txtUserName" required="" />
                            </div>
                            <br />
                            <div>
                                <input type="password" class="form-control" placeholder="Password" name="password" id="txtPassword" required="" />
                            </div>
                            <br />
                            <div>
                                @*<a class="btn btn-default submit" href="index.html">Log in</a>*@
                                <input type="submit" name="btnLogin" class="btn btn-default submit" value="Login" style="text-align:center; float:none; margin-left:0" />
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </section>
                </div>

            </div>
        </div>
    </form>

</body>
</html>
